@namespace FormCraft.ForMudBlazor
@typeparam TModel
@inherits FieldComponentBase<TModel, string>
@implements ITextFieldComponent<TModel>

<MudTextField
    T="string"
    Label="@Label"
    @bind-Value="@_localValue"
    @bind-Value:after="OnLocalValueChanged"
    Placeholder="@Placeholder"
    HelperText="@HelpText"
    ReadOnly="@IsReadOnly"
    Disabled="@IsDisabled"
    Lines="@Lines"
    MaxLength="@(MaxLength.HasValue && MaxLength.Value > 0 ? MaxLength.Value : int.MaxValue)"
    InputType="@GetInputType()"
    Adornment="@(Adornment ?? MudBlazor.Adornment.None)"
    AdornmentIcon="@AdornmentIcon"
    AdornmentColor="@AdornmentColor"
    OnAdornmentClick="@HandleAdornmentClick"
    Variant="Variant.Outlined"
    Margin="Margin.Dense"
    Immediate="true" />