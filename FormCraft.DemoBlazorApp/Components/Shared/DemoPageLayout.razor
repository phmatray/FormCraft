@namespace FormCraft.DemoBlazorApp.Components.Shared
@using FormCraft.DemoBlazorApp.Components.Shared.Navigation

<MudContainer MaxWidth="MaxWidth.Large" Class="py-6">
    @if (ShowBreadcrumb && !string.IsNullOrEmpty(DemoId))
    {
        <DemoBreadcrumb DemoId="@DemoId" />
    }

    <DemoPageHeader Title="@Title" Icon="@Icon" Description="@Description" />

    <MudPaper Elevation="2" Class="pa-0">
        <MudTabs Elevation="0" Rounded="false" PanelClass="pa-6">
            <MudTabPanel Text="Form Demo" Icon="@FormDemoIcon">
                @FormDemoContent
            </MudTabPanel>

            <MudTabPanel Text="Code Example" Icon="@Icons.Material.Filled.Code">
                @CodeExampleContent
            </MudTabPanel>

            <MudTabPanel Text="Guidelines" Icon="@Icons.Material.Filled.Lightbulb">
                @GuidelinesContent
            </MudTabPanel>

            @if (AdditionalTabs != null)
            {
                @AdditionalTabs
            }
        </MudTabs>
    </MudPaper>

    @if (ShowPrevNextNav && !string.IsNullOrEmpty(DemoId))
    {
        <DemoPrevNextNavigation DemoId="@DemoId" />
    }
</MudContainer>
