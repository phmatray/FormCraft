@namespace FormCraft.DemoBlazorApp.Components.Shared

@if (!string.IsNullOrWhiteSpace(Text))
{
    <MudCard Elevation="1" Class="mt-3">
        <MudCardContent>
            <MudText Typo="Typo.h6" Class="mb-2 d-flex align-center">
                <MudIcon Icon="@Icons.Material.Filled.HelpOutline" Class="me-2" Color="Color.Info" />
                When to Use
            </MudText>
            <MudText Typo="Typo.body2">@Text</MudText>
        </MudCardContent>
    </MudCard>
}

@code {
    [Parameter]
    public string? Text { get; set; }
}
