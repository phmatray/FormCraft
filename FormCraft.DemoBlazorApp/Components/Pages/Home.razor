@page "/"
@page "/home"
@inject IJSRuntime JS

<PageTitle>FormCraft - Dynamic Forms for Blazor</PageTitle>

<MudContainer MaxWidth="MaxWidth.False" Class="pa-0">
    @* Hero Section with Interactive Playground *@
    <MudPaper Square="true" Elevation="1" Class="pa-0">
        <MudContainer MaxWidth="MaxWidth.Large" Class="py-12">
            <MudGrid Spacing="6" Justify="Justify.Center">
                <MudItem xs="12" md="5" Class="d-flex flex-column justify-center">
                    <div class="hero-title">
                        <MudText Typo="Typo.h2" Class="mb-3 font-weight-bold">
                            Build Dynamic Forms
                            <span class="text-primary d-block">In Minutes</span>
                        </MudText>
                        <MudText Typo="Typo.h6" Class="mb-5 mud-text-secondary">
                            Type-safe, validated, beautiful. Try it right now.
                        </MudText>
                        <div class="d-flex gap-3 flex-wrap">
                            <MudButton Variant="Variant.Filled"
                                       Color="Color.Primary"
                                       Size="Size.Large"
                                       StartIcon="@Icons.Material.Filled.RocketLaunch"
                                       Href="docs/getting-started">
                                Get Started
                            </MudButton>
                            <MudButton Variant="Variant.Outlined"
                                       Color="Color.Primary"
                                       Size="Size.Large"
                                       StartIcon="@Icons.Material.Filled.PlayArrow"
                                       Href="simplified">
                                View All Demos
                            </MudButton>
                        </div>
                    </div>
                </MudItem>
                <MudItem xs="12" md="7">
                    <div class="hero-playground">
                        <InteractivePlayground />
                    </div>
                </MudItem>
            </MudGrid>
        </MudContainer>
    </MudPaper>

    @* Statistics Section *@
    <MudPaper Square="true" Class="stats-section py-8">
        <MudContainer MaxWidth="MaxWidth.Large">
            <MudGrid Justify="Justify.SpaceAround">
                <MudItem xs="6" md="3">
                    <AnimatedCounter Target="600" Suffix="+" Label="Unit Tests"
                                     Icon="@Icons.Material.Filled.CheckCircle" />
                </MudItem>
                <MudItem xs="6" md="3">
                    <AnimatedCounter Target="25" Suffix="+" Label="Field Types"
                                     Icon="@Icons.Material.Filled.Extension" />
                </MudItem>
                <MudItem xs="6" md="3">
                    <AnimatedCounter Target="18" Label="Demo Pages"
                                     Icon="@Icons.Material.Filled.Code" />
                </MudItem>
                <MudItem xs="6" md="3">
                    <AnimatedCounter Target="100" Suffix="%" Label="Type-Safe"
                                     Icon="@Icons.Material.Filled.Security" />
                </MudItem>
            </MudGrid>
        </MudContainer>
    </MudPaper>

    @* Features Section *@
    <MudContainer MaxWidth="MaxWidth.Large" Class="py-12">
        <MudText Typo="Typo.h4" Align="Align.Center" Class="mb-2 font-weight-bold">
            Why Choose FormCraft?
        </MudText>
        <MudText Typo="Typo.subtitle1" Align="Align.Center" Class="mb-8 mud-text-secondary">
            Everything you need to build powerful forms in Blazor
        </MudText>

        <MudGrid Spacing="4" Class="feature-cards-container">
            <MudItem xs="12" sm="6" md="4">
                <MudCard Elevation="2" Class="feature-card feature-card-animated visible h-100">
                    <MudCardContent Class="text-center">
                        <MudIcon Icon="@Icons.Material.Filled.Speed" Size="Size.Large" Color="Color.Primary" Class="mb-3 feature-icon" />
                        <MudText Typo="Typo.h6" Class="mb-2">Type-Safe & Fast</MudText>
                        <MudText Typo="Typo.body2" Class="mud-text-secondary">
                            Strongly-typed forms with compile-time safety and IntelliSense support.
                        </MudText>
                    </MudCardContent>
                </MudCard>
            </MudItem>

            <MudItem xs="12" sm="6" md="4">
                <MudCard Elevation="2" Class="feature-card feature-card-animated visible h-100">
                    <MudCardContent Class="text-center">
                        <MudIcon Icon="@Icons.Material.Filled.Api" Size="Size.Large" Color="Color.Secondary" Class="mb-3 feature-icon" />
                        <MudText Typo="Typo.h6" Class="mb-2">Fluent API</MudText>
                        <MudText Typo="Typo.body2" Class="mud-text-secondary">
                            Intuitive method chaining for building forms with minimal code.
                        </MudText>
                    </MudCardContent>
                </MudCard>
            </MudItem>

            <MudItem xs="12" sm="6" md="4">
                <MudCard Elevation="2" Class="feature-card feature-card-animated visible h-100">
                    <MudCardContent Class="text-center">
                        <MudIcon Icon="@Icons.Material.Filled.CheckCircle" Size="Size.Large" Color="Color.Success" Class="mb-3 feature-icon" />
                        <MudText Typo="Typo.h6" Class="mb-2">Built-in Validation</MudText>
                        <MudText Typo="Typo.body2" Class="mud-text-secondary">
                            FluentValidation integration with custom validator support.
                        </MudText>
                    </MudCardContent>
                </MudCard>
            </MudItem>

            <MudItem xs="12" sm="6" md="4">
                <MudCard Elevation="2" Class="feature-card feature-card-animated visible h-100">
                    <MudCardContent Class="text-center">
                        <MudIcon Icon="@Icons.Material.Filled.Palette" Size="Size.Large" Color="Color.Warning" Class="mb-3 feature-icon" />
                        <MudText Typo="Typo.h6" Class="mb-2">MudBlazor Integration</MudText>
                        <MudText Typo="Typo.body2" Class="mud-text-secondary">
                            Beautiful UI powered by MudBlazor with full theming support.
                        </MudText>
                    </MudCardContent>
                </MudCard>
            </MudItem>

            <MudItem xs="12" sm="6" md="4">
                <MudCard Elevation="2" Class="feature-card feature-card-animated visible h-100">
                    <MudCardContent Class="text-center">
                        <MudIcon Icon="@Icons.Material.Filled.Extension" Size="Size.Large" Color="Color.Info" Class="mb-3 feature-icon" />
                        <MudText Typo="Typo.h6" Class="mb-2">Extensible</MudText>
                        <MudText Typo="Typo.body2" Class="mud-text-secondary">
                            Custom field renderers and validators for your requirements.
                        </MudText>
                    </MudCardContent>
                </MudCard>
            </MudItem>

            <MudItem xs="12" sm="6" md="4">
                <MudCard Elevation="2" Class="feature-card feature-card-animated visible h-100">
                    <MudCardContent Class="text-center">
                        <MudIcon Icon="@Icons.Material.Filled.DynamicForm" Size="Size.Large" Color="Color.Error" Class="mb-3 feature-icon" />
                        <MudText Typo="Typo.h6" Class="mb-2">Dynamic Fields</MudText>
                        <MudText Typo="Typo.body2" Class="mud-text-secondary">
                            Conditional visibility, dependencies, and dynamic generation.
                        </MudText>
                    </MudCardContent>
                </MudCard>
            </MudItem>
        </MudGrid>
    </MudContainer>

    @* Feature Showcase Section *@
    <FeatureShowcase />

    @* Quick Start Section *@
    <MudContainer MaxWidth="MaxWidth.Large" Class="py-12">
        <MudText Typo="Typo.h4" Align="Align.Center" Class="mb-2 font-weight-bold">
            Get Started in 3 Steps
        </MudText>
        <MudText Typo="Typo.subtitle1" Align="Align.Center" Class="mb-8 mud-text-secondary">
            From zero to your first form in under a minute
        </MudText>

        <MudTimeline TimelinePosition="TimelinePosition.Start" TimelineAlign="TimelineAlign.Default">
            <MudTimelineItem Color="Color.Primary" Size="Size.Large" Elevation="2">
                <ItemOpposite>
                    <MudChip T="string" Color="Color.Primary" Size="Size.Large">Step 1</MudChip>
                </ItemOpposite>
                <ItemContent>
                    <MudCard Elevation="2">
                        <MudCardContent>
                            <MudText Typo="Typo.h6" Class="mb-2">Install the Package</MudText>
                            <MudPaper Class="pa-3 d-flex align-center justify-space-between" Elevation="0"
                                      Style="background: #1e1e1e; border-radius: 8px;">
                                <code style="color: #dcdcdc;">dotnet add package FormCraft.ForMudBlazor</code>
                                <MudIconButton Icon="@Icons.Material.Filled.ContentCopy"
                                               Color="Color.Primary"
                                               Size="Size.Small"
                                               OnClick="@(() => CopyToClipboard("dotnet add package FormCraft.ForMudBlazor", true))" />
                            </MudPaper>
                        </MudCardContent>
                    </MudCard>
                </ItemContent>
            </MudTimelineItem>

            <MudTimelineItem Color="Color.Secondary" Size="Size.Large" Elevation="2">
                <ItemOpposite>
                    <MudChip T="string" Color="Color.Secondary" Size="Size.Large">Step 2</MudChip>
                </ItemOpposite>
                <ItemContent>
                    <MudCard Elevation="2">
                        <MudCardContent>
                            <MudText Typo="Typo.h6" Class="mb-2">Configure Your Form</MudText>
                            <MudPaper Class="pa-3" Elevation="0" Style="background: #1e1e1e; border-radius: 8px;">
                                <pre style="color: #9cdcfe; margin: 0; font-size: 0.85rem;"><span style="color: #569cd6;">var</span> config = <span style="color: #4ec9b0;">FormBuilder</span>&lt;<span style="color: #4ec9b0;">MyModel</span>&gt;.<span style="color: #dcdcaa;">Create</span>()
    .<span style="color: #dcdcaa;">AddRequiredTextField</span>(x => x.Name, <span style="color: #ce9178;">"Name"</span>)
    .<span style="color: #dcdcaa;">AddEmailField</span>(x => x.Email)
    .<span style="color: #dcdcaa;">Build</span>();</pre>
                            </MudPaper>
                        </MudCardContent>
                    </MudCard>
                </ItemContent>
            </MudTimelineItem>

            <MudTimelineItem Color="Color.Success" Size="Size.Large" Elevation="2">
                <ItemOpposite>
                    <MudChip T="string" Color="Color.Success" Size="Size.Large">Step 3</MudChip>
                </ItemOpposite>
                <ItemContent>
                    <MudCard Elevation="2">
                        <MudCardContent>
                            <MudText Typo="Typo.h6" Class="mb-2">Use in Your Component</MudText>
                            <MudPaper Class="pa-3" Elevation="0" Style="background: #1e1e1e; border-radius: 8px;">
                                <pre style="color: #808080; margin: 0; font-size: 0.85rem;">&lt;<span style="color: #569cd6;">FormCraftComponent</span> <span style="color: #9cdcfe;">TModel</span>=<span style="color: #ce9178;">"MyModel"</span>
    <span style="color: #9cdcfe;">Model</span>=<span style="color: #ce9178;">"@@model"</span>
    <span style="color: #9cdcfe;">Configuration</span>=<span style="color: #ce9178;">"@@config"</span> /&gt;</pre>
                            </MudPaper>
                        </MudCardContent>
                    </MudCard>
                </ItemContent>
            </MudTimelineItem>
        </MudTimeline>

        <div class="text-center mt-6">
            <MudButton Variant="Variant.Filled"
                       Color="Color.Primary"
                       Size="Size.Large"
                       StartIcon="@Icons.Material.Filled.MenuBook"
                       Href="docs/getting-started">
                Read Full Documentation
            </MudButton>
        </div>
    </MudContainer>

    @* Footer CTA *@
    <MudPaper Square="true" Elevation="3" Class="py-8 ma-0 rounded-0">
        <MudContainer MaxWidth="MaxWidth.Large" Class="text-center">
            <MudText Typo="Typo.h4" Class="mb-4 font-weight-bold" Color="Color.Primary">
                Ready to Build Better Forms?
            </MudText>
            <MudText Typo="Typo.h6" Class="mb-6">
                Join developers who are creating dynamic forms faster with FormCraft.
            </MudText>
            <div class="d-flex gap-3 justify-center flex-wrap">
                <MudButton Variant="Variant.Filled"
                           Color="Color.Secondary"
                           Size="Size.Large"
                           StartIcon="@Icons.Material.Filled.RocketLaunch"
                           Href="docs/getting-started">
                    Get Started Now
                </MudButton>
                <MudButton Variant="Variant.Outlined"
                           Color="Color.Primary"
                           Size="Size.Large"
                           StartIcon="@Icons.Custom.Brands.GitHub"
                           Href="https://github.com/phmatray/FormCraft"
                           Target="_blank">
                    View on GitHub
                </MudButton>
            </div>
        </MudContainer>
    </MudPaper>
</MudContainer>

<style>
    .font-weight-bold {
        font-weight: 700 !important;
    }

    .rounded-lg {
        border-radius: 12px !important;
    }

    pre {
        margin: 0;
        padding: 0;
        background: transparent;
        font-size: 0.875rem;
        line-height: 1.5;
    }

    code {
        font-family: 'Consolas', 'Monaco', 'Courier New', monospace;
    }
</style>
