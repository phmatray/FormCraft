@page "/file-upload"

<DemoPageLayout
    DemoId="file-upload"
    Title="File Upload Demo"
    Icon="@Icons.Material.Filled.CloudUpload"
    Description="This demonstrates how to use file upload fields with various configurations including single and multiple file uploads."
    FormDemoIcon="@Icons.Material.Filled.ViewQuilt">
    <FormDemoContent>
        <FormDemoSection
            TModel="JobApplicationModel"
            Model="@_model"
            Configuration="@_formConfiguration"
            FormTitle="Job Application"
            FormIcon="@Icons.Material.Filled.Person"
            IsSubmitted="@_isSubmitted"
            OnValidSubmit="@HandleSubmit"
            OnReset="@ResetForm"
            DataDisplayItems="@GetDataDisplayItems()"
            ShowSubmitButton="true">
            <SidebarContent>
                <FormGuidelines Guidelines="@_sidebarFeatures" Title="File Upload Features" />
            </SidebarContent>
            <AdditionalContent>
                <WhenToUseCard Text="@Documentation.WhenToUse" />
                <CommonPitfallsCard Pitfalls="@Documentation.CommonPitfalls" />
                <RelatedDemosCard DemoIds="@Documentation.RelatedDemoIds" />
            </AdditionalContent>
        </FormDemoSection>
    </FormDemoContent>
    
    <CodeExampleContent>
        <CodeExample
            Title="Form Builder Code"
            Code="@GetGeneratedCode()"
            Language="csharp" />
    </CodeExampleContent>
    
    <GuidelinesContent>
        <ApiGuidelinesTable
            Title="File Upload Guidelines"
            Items="@_apiGuidelineTableItems" />
    </GuidelinesContent>
</DemoPageLayout>